#!/usr/bin/env node

//@ts-check

const { default: TypeGenerator } = require('../dist/');
const { description, version } = require('../package.json');
const program = require('commander');

program
  .version(version)
  .description(description)
  .option('-o, --output <file>', 'Specify the output file (required)')
  .option('-b, --base <path>', 'Specify the libsodium.js base path')
  .parse(process.argv);

if (!program.output) {
  console.error('No output file specified!');
  program.help();
}

new TypeGenerator(program.output, program.base)
  .generate()
  .then(outputFile =>
    console.log(
      `Success! The declaration file is now available at "${outputFile}."`
    )
  )
  .catch(error => console.error(error));
